{
  "name": "instagram-tutorials",
  "private": true,
  "scripts": {
    "dev:speech-to-text": "turbo run dev --filter=@reza-heydari/speech-to-text",
    "build:speech-to-text": "turbo run build --filter=@reza-heydari/speech-to-text",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@reza-heydari/eslint-config": "*",
    "@reza-heydari/typescript-config": "*",
    "prettier": "^3.1.1",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.15",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
